{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2019", // node12->es2019
    "lib": [
      "ES2019"
    ],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "esModuleInterop": true,
  },
  "files": [
    "build-license.ts",
    "build-rust-assets.ts",
  ]
}
