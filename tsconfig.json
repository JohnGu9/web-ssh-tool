{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2021", // node14->es2020 node16->es2021
    "lib": [
      "ES2021"
    ],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./build"
  },
  "files": [
    "build.ts"
  ]
}